  <body>
   <%- include("nav1") -%>
   <br>
   <% let len=0; %> 
   <% if(newListItems !== undefined ) { len = newListItems.length; } %>
   <br>
   <br>
     <center> <h3 class="newk">For New Company -> <a href="/login"><button class="newbtn">Register Here</button></center> </a>
       <br>
        <h2 class="h-primary clss centerr" id="pricing-heading">Registered Companies</h2>
        <!--cards -->
        <div class="main"> 
         <%  for(var i=0;i<len;i++){  %>
         <div class="ccard">
     
            <div class="image">
              <% if(newListItems[i].url!==""){  %> 
                <img src="<%= newListItems[i].url %>">
                <% }else{ %> 
                  <img src="https://thumbs.dreamstime.com/b/spelling-word-company-using-dice-white-background-word-company-spelled-dice-123025435.jpg">
                  <% } %> 
            </div>
            <div class="title">
              <h1><%= newListItems[i].company %></h1>
            </div>
      
            <div class="title">
              <p>Name : <%= newListItems[i].fname +" " + newListItems[i].lname %></p>
              <p>Designation : <%= newListItems[i].designation %></p>
              <p>Location : <%= newListItems[i].loc %></p>
              <p>Email : <%= newListItems[i].email %></p>
              <p>Phone : <%= newListItems[i].phone %></p>
              <p>Address : <%= newListItems[i].add %></p>
            </div>
      
            <div class="des">
              </div>
            </div>
        <% } %>
        </div>
        <br>
        <br>
            <!--cards -->
